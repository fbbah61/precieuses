{% extends "base.html.twig" %}

{% block body %}
    <h1 class="display-4 text-center my-4">Veuillez vous Inscrire</h1>
    {{ form_start(form, {'attr' : {'class' : 'col-md-5 mx-auto'}})}}

    {{ form_row(form.civilite) }}
    {{ form_row(form.nom, {'label' : "votre Nom"}) }}
    {{ form_row(form.prenom, {'label' : "votre Prenom"}) }}
    {{ form_row(form.adresse, {'label' : "votre Adresse"}) }}
    {{ form_row(form.code_postal, {'label' : "votre Code Postal"}) }}
    {{ form_row(form.email, {'label' : "votre Email"}) }}
    {{ form_row(form.password, {'label' : "Mot de passe"}) }}
    {{ form_row(form.confirm_password, {'label' : "Confirmer votre mot de passe"})}}



    <button class="btn btn-dark" type="submit">Inscription</button>

    {{ form_end(form)}}



{% endblock %}